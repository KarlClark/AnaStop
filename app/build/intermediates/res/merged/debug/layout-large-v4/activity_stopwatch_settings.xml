<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.neuroleap.speachandlanguage.Activities.SettingsActivity"
              android:orientation="vertical"
              android:background="@color/black">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_weight=".8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stopwatch_mode"
            android:textSize="40sp"
            android:id="@+id/tvStopwatchMode"
            android:gravity="left"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnStopwatchMode"
            android:entries="@array/stopwatch_options"
            android:spinnerMode="dropdown"
            android:background="@drawable/spinner_white_arrow"
            android:popupBackground="@color/dark_grey"

            android:layout_alignBottom="@id/tvStopwatchMode"
            android:layout_toEndOf="@+id/tvStopwatchMode"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line2"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/tvStopwatchMode"
            android:layout_alignParentStart="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5">
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@color/white">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/done"
                android:id="@+id/btnDone"
                android:textSize="40sp"
                android:layout_above="@+id/line2"
                android:layout_alignEnd="@+id/line1"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5">
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7">
    </FrameLayout>
</LinearLayout>